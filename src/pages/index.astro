---
import '@fontsource/space-mono';
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout>
   <h1>Hey I'm <span class="jack">Jack</span>!</h1>
   <p>I like to write about what I'm doing sometimes. This is the onestop shop for everything I'm up to.</p>
</MainLayout>

<style lang="scss">
   @use '../styles/_main-colors' as *;
   @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap');
   
   :root {
      background-color: $base;
      color: $text;
   }

   body {
      margin: 0;
   }
   
   h1 {
      font-family: 'poppins', sans-serif;
      font-size: max(8vw, 4rem);
      font-weight: bold;
      line-height: 1.2;
      margin-top: 1rem;
      margin-left: 1rem;
      margin-bottom: 0;
      padding-right: 4rem;
   }

   p {
      font-family: 'Space Mono', sans-serif;
      font-size: max(2vw, 1rem);
      margin-left: 1rem;
      margin-right: 2rem;
   }

   .jack {
      color: $accent;
   }

</style>
