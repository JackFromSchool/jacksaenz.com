<style lang="scss">
   @use '../styles/_main-colors' as *;
   @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap');
   
   :root {
      background-color: $base;
      color: $text;
   }

   body {
      margin: 0;
   }
   
   h1 {
      font-family: 'montserrat', sans-serif;
      font-size: max(8vw, 4rem);
      font-weight: bold;
      line-height: 1.2;
      margin-top: 1rem;
      margin-left: 1rem;
      margin-bottom: 0;
      padding-right: 4rem;
   }

   h2 {
      font-family: 'montserrat', sans-serif;
      font-weight: normal;
      font-size: max(2vw, 1rem);
      margin-bottom: .5rem;
      margin-top: 0;
      margin-left: 1rem;
      color: $text;
   }

   a {
      color: $accent;
   }

   p {
      font-family: 'roboto', sans-serif;
      font-size: max(1vw, 1rem);
      margin-top: 0;
      margin-bottom: 2rem;
      margin-left: 1rem;
   }

   .subtitle {
      font-family: 'roboto', sans-serif;
      font-size: max(1.5vw, 1rem);
      margin-left: 1rem;
      margin-right: 2rem;
      margin-top: 0.5rem;
      margin-bottom: 2rem;
   }

   .jack {
      color: $accent;
   }

   .sitemap {
   }

</style>
