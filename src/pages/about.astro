---
import '@fontsource/space-mono';
import '@fontsource/poppins';
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout>
   <div class="centered-container">
      <div class="inner-item">
         <h1>About</h1>
         <p>
            Majoring in Electrical and Computer Engineering at UT Austin.
         </p>
         <p>
            I love tech and I love writing, so I built this blog to act as a cross roads for both of those passions. I don't abide by any rules to what I write about so expect anything.
         </p>
      </div>
   </div>
</MainLayout>

<style lang="scss">
   @use '../styles/_main-colors' as *;
   @use '../styles/_centered-classes' as *;
   
   :root {
      background-color: $base;
      color: $text;
   }

   body {
      margin: 0;
   }
   
   h1 {
      font-family: 'poppins', sans-serif;
      font-size: max(8vw, 4rem);
      font-weight: bold;
      line-height: 1.2;
      margin-top: 1rem;
      margin-left: 1rem;
      margin-bottom: 0;
      padding-right: 4rem;
   }

   p {
      font-family: 'Space Mono', sans-serif;
      font-size: max(1.5vw, 1rem);
      max-width: 80rem;
      margin-left: 1rem;
      margin-right: 2rem;
   }

</style>
